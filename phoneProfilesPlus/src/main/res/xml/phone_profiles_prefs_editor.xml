<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="categoryEditor"
    app:title="@string/phone_profiles_pref_category_editor">

    <SwitchPreferenceCompat
        app:key="applicationEditorPrefIndicator"
        app:title="@string/phone_profiles_pref_applicationPrefIndicator"
        app:defaultValue="true"
        app:iconSpaceReserved="false" />
    <SwitchPreferenceCompat
        app:key="applicationEditorHeader"
        app:title="@string/phone_profiles_pref_applicationHeader"
        app:defaultValue="true"
        app:iconSpaceReserved="false" />
    <SwitchPreferenceCompat
        app:key="applicationEditorSaveEditorState"
        app:title="@string/phone_profiles_pref_applicationEditorSaveEditorState"
        app:defaultValue="true"
        app:iconSpaceReserved="false" />
    <SwitchPreferenceCompat
        app:key="applicationEditorAutoCloseDrawer"
        app:title="@string/phone_profiles_pref_applicationAutoCloseDrawer"
        app:defaultValue="true"
        app:iconSpaceReserved="false" />
    <sk.henrichg.phoneprofilesplus.BetterNumberPickerPreferenceX
        app:key="applicationDeleteOldActivityLogs"
        app:summary="@string/phone_profiles_pref_deleteOldActivityLogs"
        app:title="@string/phone_profiles_pref_deleteOldActivityLogs"
        app:defaultValue="7"
        app:min="0"
        app:max="30"
        app:iconSpaceReserved="false" />
    
</androidx.preference.PreferenceScreen>