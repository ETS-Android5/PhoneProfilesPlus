<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/editor_drawer_list_item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp" >

    <ImageView
        android:id="@+id/editor_drawer_list_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/empty_string"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_events_drawer_profile_filter_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/editor_drawer_list_item_title"
            android:textColor="?attr/navigationDrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="17sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/editor_drawer_list_item_subtitle"
            android:textColor="?attr/navigationDrawerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="14sp"
            android:maxLines="1"/>

    </LinearLayout>

</LinearLayout>