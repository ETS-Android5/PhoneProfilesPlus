<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editor_list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true" >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/editor_list_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        app:menu="@menu/editor_bottom_navigation_menu" />

    <RelativeLayout
        android:id="@+id/editor_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/editor_list_bottom_navigation">

        <LinearLayout
            android:id="@+id/editor_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="3dp"
            android:orientation="vertical"
            android:background="?attr/colorPrimary"
            android:elevation="0dp" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/editor_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="?attr/toolbarTheme"
                app:popupTheme="?attr/toolbarPopupMenu" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/editor_subToolbar"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <!--
                    <TextView
                        android:id="@+id/editor_filter_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/editor_list_run_stop_indicator"
                        android:ellipsize="end"
                        android:textSize="15sp"
                        android:textColor="?attr/editorFilterTitleColor"
                        android:maxLines="1"/>
                    -->

                    <ImageView
                        android:id="@+id/editor_list_run_stop_indicator"
                        android:layout_width="50dp"
                        android:layout_height="23dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/run_stop_indicator_margin_end"
                        android:padding="5dp"
                        android:layout_toEndOf="@id/editor_filter_spinner"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/run_stop_events_indicator"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_run_events_indicator_stopped" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/editor_filter_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/emptyArray" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/editor_list_bottom_bar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimary"
            android:theme="?attr/bottomToolbarTheme"
            app:popupTheme="?attr/toolbarPopupMenu" >

            <LinearLayout
                android:id="@+id/editor_list_bottom_bar_order_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/editor_list_bottom_bar_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="?attr/editorFilterTitleColor"
                    android:clickable="true"
                    android:text="@string/editor_drawer_order_label"
                    android:maxLines="1"
                    android:focusable="true"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/editor_list_bottom_bar_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/orderEventsArray" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editor_list_toolbar"
            android:layout_above="@id/editor_list_bottom_bar" >

            <FrameLayout
                android:id="@+id/editor_list_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".EditorProfileListActivity"  />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_dropShadow_height"
                android:background="?attr/dialogDivider"
                android:layout_gravity="bottom" />

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
