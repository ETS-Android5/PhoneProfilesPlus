<?xml version="1.0" encoding="utf-8"?>
<!-- FrameLayout is used for proper header height -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/editor_drawer_list_header_background"
        android:background="?attr/editorDrawerListHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/editor_drawer_list_header_icon_bg"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/empty_string"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_events_drawer_filter_header_bg" />

        <ImageView
            android:id="@+id/editor_drawer_list_header_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/empty_string"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_events_drawer_profile_filter_0" />

        <TextView
            android:id="@+id/editor_drawer_list_header_title"
            android:textColor="?attr/editorDrawerListHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/editor_drawer_list_header_icon_bg"
            android:paddingTop="39dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:textSize="20sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/editor_drawer_list_header_subtitle"
            android:textColor="?attr/editorDrawerListHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editor_drawer_list_header_icon_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="0dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:maxLines="1"/>

    </RelativeLayout>

</FrameLayout>