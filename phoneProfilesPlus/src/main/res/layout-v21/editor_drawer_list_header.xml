<?xml version="1.0" encoding="utf-8"?>
<!-- FrameLayout is used for proper header height -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/editor_drawer_list_header_background"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        tools:ignore="UselessParent">

        <!--
        <ImageView
            android:id="@+id/editor_drawer_list_header_icon_bg"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/empty_string"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="?attr/editorDrawerFilterHeaderBg" />
        -->

        <ImageView
            android:id="@+id/editor_drawer_list_header_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="38dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/empty_string"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_events_drawer_profile_filter_0" />

        <TextView
            android:id="@+id/editor_drawer_list_header_title"
            android:textColor="?attr/editorDrawerListHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/editor_drawer_list_header_icon"
            android:paddingTop="39dp"
            android:paddingStart="12dp"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:textSize="20sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/editor_drawer_list_header_subtitle"
            android:textColor="?attr/editorDrawerListHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editor_drawer_list_header_icon"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="9dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:maxLines="1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_dropShadow_height"
        android:background="@drawable/bottombar_dropshadow"
        android:layout_gravity="bottom" />

</FrameLayout>